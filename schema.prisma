
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  relationMode = "prisma"
}
        

model Employee {
  id          String    @id @default(uuid())
  fullName       String    @db.Text
  slug       String    @db.Text
  role       String    @db.Text
  profilePicture    String   @db.Text
  secondaryImage    String   @db.Text
  description String?   @db.Text
  category String?   @db.Text
  linkedInProfile    String?   @db.Text
  isPublished Boolean   @default(false)


  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model SpinTheWheelActivity {
  id          String    @id @default(uuid())
  name       String    @db.Text
  numberOfSpins       BigInt    @db.BigInt @default(0)
  wheelId       String    @db.Text
  prize       String?    @db.Text
  email       String    @db.Text
  phoneNumber       String    @db.Text
  hasWonPrize       Boolean   @default(false)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

